<%- include('partials/header') %>
<main class="flex flex-col max-w-md justify-center p-6 gap-5 mx-auto">
  <h1 class="text-2xl font-semibold">Data Siswa</h1>
  <input type="text" id="studentId" hidden value="<%= data?.nis %>" disabled />
  <table class="mt-5">
    <tr>
      <td class="w-32">NIS</td>
      <td>:</td>
      <td><%= data?.nis %></td>
    </tr>
    <tr>
      <td class="w-32">Nama</td>
      <td>:</td>
      <td><%= data?.nama %></td>
    </tr>
    <tr>
      <td>Departemen</td>
      <td>:</td>
      <td><%= data?.departemen %></td>
    </tr>
    <tr>
      <td>Kelas</td>
      <td>:</td>
      <td><%= data?.kelas %></td>
    </tr>
    <tr>
      <td>Kehadiran</td>
      <td>:</td>
      <td>
        <%= data?.hadir == 1 ? "✅ " + (new
        Intl.DateTimeFormat('id').format(data.updatedAt)) : "❌" %>
      </td>
    </tr>
  </table>
  <div id="qrCode"></div>
  <button id="downloadQR" class="px-2 py-1 bg-blue-700 text-white">
    Download QR
  </button>
  <button
    class="px-2 py-1 bg-red-700 text-white"
    onclick="return history.go(-1)"
  >
    Kembali
  </button>
</main>

<script src="/js/qrcodeGenerate.js"></script>
<%- include('partials/footer') %>
