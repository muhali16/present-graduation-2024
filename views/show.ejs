<%- include('./partials/header'); %>
<main class="flex flex-col max-w-md justify-center p-6 gap-5 mx-auto">
  <span
    class="px-2 py-10 bg-green-600/75 text-white text-xl font-semibold text-center"
    >Berhasil Hadir</span
  >
  <h2 class="text-2xl font-bold"><%= data.nama %></h2>
  <table>
    <tr>
      <td class="w-32">NISN</td>
      <td>:</td>
      <td><%= data.nisn %></td>
    </tr>
    <tr>
      <td>Departemen</td>
      <td>:</td>
      <td><%= data.departemen %></td>
    </tr>
    <tr>
      <td>Kelas</td>
      <td>:</td>
      <td><%= data.kelas %></td>
    </tr>
  </table>
  <a
    href="/scan-present"
    class="w-full text-center block px-2 py-1 bg-blue-700 text-white mt-10 rounded-md"
  >
    Scan Another QR
  </a>
</main>
<%- include('./partials/footer'); %>
