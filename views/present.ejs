<%- include('./partials/header'); %>
<main class="max-w-md mx-auto p-6">
  <% if (data.hadir == 1) {%>
  <div
    class="px-2 py-10 bg-green-600/75 text-white text-xl font-semibold text-center mb-5"
    >Sudah Hadir</div
  >
  <% }%>
  <h1 class="text-2xl font-semibold">Data Peserta Lepas Kenang 2024</h1>
  <input type="text" hidden id="studentId" value="<%= data?.nis %>" disabled />
  <table class="mt-5">
    <tr>
      <td class="w-32">NIS</td>
      <td>:</td>
      <td><%= data?.nis %></td>
    </tr>
    <tr>
      <td class="w-32">Nama</td>
      <td>:</td>
      <td><%= data?.nama %></td>
    </tr>
    <tr>
      <td>Departemen</td>
      <td>:</td>
      <td><%= data?.departemen %></td>
    </tr>
    <tr>
      <td>Kelas</td>
      <td>:</td>
      <td><%= data?.kelas %></td>
    </tr>
  </table>
  <button
    id="hadir"
    class="w-full px-2 py-1 bg-blue-600 text-white rounded-md mt-10 <%= data == null || data.hadir == 1 ? "bg-gray-500": "bg-blue-700 text-white"%>"
    <%= data == null || data.hadir == 1 ? "hidden": ""%>
  >
    Hadir
  </button>
  <a
    href="/scan-present"
    class="w-full text-center block px-2 py-1 bg-red-700 text-white rounded-md mt-3"
  >
  Kembali
  </a>
</main>

<script type="module" src="/js/present.js"></script>
<%- include('./partials/footer'); %>
